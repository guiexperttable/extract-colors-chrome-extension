{
  "name": "Extract Colors DevTool",
  "description": "Extract Colors DevTool is a powerful developer tool designed to simplify the process of extracting color palettes from any webpage.",
  "version": "1.0.8",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "system.display"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background/display-info.js"
  },
  "content_scripts": [
    {
      "js": [
        "js/inject/system-info.js"
      ],
      "css": [
        "css/inject/ruler.css"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],
  "icons": {
    "128": "icon/logo-128.png",
    "48": "icon/logo-48.png",
    "16": "icon/logo-16.png"
  }
}
